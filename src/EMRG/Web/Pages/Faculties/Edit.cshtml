@page
@model Web.Pages.Faculties.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Faculty.Initials" class="control-label"></label>
                <input asp-for="Faculty.Initials" class="form-control" />
                <span asp-validation-for="Faculty.Initials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.Designation" class="control-label"></label>
                <input asp-for="Faculty.Designation" class="form-control" />
                <span asp-validation-for="Faculty.Designation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty.DepartmentId" class="control-label"></label>
                <select asp-for="Faculty.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Faculty.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Faculty.IsRemoved" /> @Html.DisplayNameFor(model => model.Faculty.IsRemoved)
                </label>
            </div>
            <input type="hidden" asp-for="Faculty.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

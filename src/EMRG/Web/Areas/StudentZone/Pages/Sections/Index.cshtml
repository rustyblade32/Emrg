@page
@model Web.Areas.StudentZone.Pages.Sections.IndexModel
@{
}

<h1 class="mt-4">@ViewBag.Title</h1>



<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Seat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Schedule.TimeSlots[0].DayOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section[0].Schedule.TimeSlots[0].StartTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Section)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.Initial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.TimeSlots[0].DayOfWeek)<br />

                    @Html.DisplayFor(modelItem => item.Schedule.TimeSlots[1].DayOfWeek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.TimeSlots[0].StartTime) <br />

                    @Html.DisplayFor(modelItem => item.Schedule.TimeSlots[1].StartTime)
                </td>
            </tr>
        }
    </tbody>
</table>
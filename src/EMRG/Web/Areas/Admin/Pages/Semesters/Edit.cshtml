@page
@model Web.Areas.Admin.Pages.Semesters.EditModel
@using static Domain.Season

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Semester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Semester.Season" class="control-label"></label>
                <select asp-for="Semester.Season" class="form-control">
                    <option value="" selected disabled>Select Season</option>
                    <option value="@Spring">Spring</option>
                    <option value="@Summer">Summer</option>
                    <option value="@Fall">Fall</option>
                </select>
                <span asp-validation-for="Semester.Season" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.Year" class="control-label"></label>
                <input asp-for="Semester.Year" class="form-control" />
                <span asp-validation-for="Semester.Year" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Semester.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
